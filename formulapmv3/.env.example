# Formula PM 3.0 Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Supabase Configuration (Copy from V2)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=your_database_url

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=50MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Feature Flags (V3 Focused)
ENABLE_ADMIN_PANEL=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERMISSION_TEMPLATES=true

# Development Tools
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# V3 Specific Settings
MAX_PERMISSION_CACHE_TIME=300
DEFAULT_PAGINATION_LIMIT=20
ENABLE_MOBILE_OPTIMIZATIONS=true