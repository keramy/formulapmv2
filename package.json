{
  "name": "formula-pm-v2",
  "version": "2.0.0",
  "description": "Formula PM 2.0 - Construction Project Management System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "jest --selectProjects=\"API Routes\"",
    "test:components": "jest --selectProjects=\"Components\"",
    "test:integration": "jest --selectProjects=\"Integration\"",
    "test:coverage": "jest --coverage",
    "validate-migrations": "npx tsx scripts/validate-migrations.ts supabase/migrations/",
    "validate-migrations:fix": "npx tsx scripts/validate-migrations.ts supabase/migrations/ --fix",
    "validate-migrations:verbose": "npx tsx scripts/validate-migrations.ts supabase/migrations/ --verbose",
    "validate-migrations:json": "npx tsx scripts/validate-migrations.ts supabase/migrations/ --format json",
    "validate-migrations:file": "npx tsx scripts/validate-migrations.ts",
    "validate-migrations:ci": "npx tsx scripts/validate-migrations.ts supabase/migrations/ --quiet",
    "generate-migration": "npx tsx scripts/generate-migration.ts",
    "supabase:validate": "npm run validate-migrations:ci && echo 'Migrations validated successfully'",
    "supabase:start": "npm run supabase:validate && supabase start",
    "supabase:reset": "npm run supabase:validate && supabase db reset",
    "pre-commit": "npm run validate-migrations:ci",
    "prepare": "husky install"
  },
