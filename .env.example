# Formula PM 2.0 Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=your_database_url
SUPABASE_DB_URL=your_supabase_db_url

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-secret
NEXTAUTH_SECRET=your-super-secret-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@formulapm.com

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=50MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Feature Flags
ENABLE_CLIENT_PORTAL=true
ENABLE_SUBCONTRACTOR_ACCESS=true
ENABLE_PURCHASE_DEPARTMENT=true
ENABLE_SHOP_DRAWINGS=true
ENABLE_DOCUMENT_APPROVAL=true

# Development Tools
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true